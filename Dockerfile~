# Base image
FROM python:3.6-slim

ENV ROOT=/patryk
#ENV JUPYTER=/my_jupyter_directory

WORKDIR $ROOT

COPY /requirements.txt $ROOT

RUN pip install jupyter
RUN pip install --upgrade --requirement requirements.txt
RUN mkdir -p /my_jupyter

CMD jupyter-notebook --no-browser --ip=0.0.0.0 --port=1306 --NotebookApp.token='hwdp1234' --NotebookApp.password='' --allow-root --notebook-dir="/patryk/my_jupyter"
